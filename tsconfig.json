{
    "compileOnSave": false,
    "compilerOptions": {
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "noEmitOnError": false,
        "downlevelIteration": true,
        "noEmit": true,
        "pretty": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types"],
        "lib": [
            "dom",
            "esnext",
            "dom.iterable"
        ]
    },
    "include": [
        "**/*",
        ".babelrc.js"    
    ],
    "exclude": [
        "node_modules"
    ]
}
