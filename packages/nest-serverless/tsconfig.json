{
    "compilerOptions": {
        "sourceMap": true,
        "allowJs": true,
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "lib": ["ES2021"],
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "target": "ES2021",
        "outDir": "packages/nest-serverless/.webpack/service",
        "rootDir": "./"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules/*"]
}