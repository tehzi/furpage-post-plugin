{
    "manifest_version": 3,
    "name": "Furpage image poster",
    "version": "%%VERSION%%",
    "description": "Плагин для управлению очередью артов",
    "content_security_policy": "script-src 'self' unsafe-eval https://api.vk.com; object-src 'self'",
    "content_scripts": [
        {
            "matches": [
                "*://*.deviantart.com/*",
                "*://www.furaffinity.net/*"
            ],
            "js": [
                "furpage-bundle.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "http://www.deviantart.com/*",
        "http://*.deviantart.com/*",
        "https://*.deviantart.com/*",
        "http://www.furaffinity.net/*",
        "https://www.furaffinity.net/*",
        "http://amaranth.furries.ru/*",
        "https://amaranth.furries.ru/*",
        "https://oauth.vk.com/*",
        "https://api.vk.com/*"
    ],
    "background": {
        "persistent": false,
        "scripts": [
            "background.js"
        ]
    },
    "icons": {
        "128": "icon_128.png"
    },
    "page_action": {
        "default_title": "Furpage image poster",
        "default_icon": "icon_19.png",
        "default_popup": "popup.html"
    }
}
